<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.book.cord.login.MemberMapper">
    
    <select id="getMemberById" resultType="com.book.cord.login.MemberVO" parameterType="String">
        SELECT * FROM members WHERE id = #{id}
    </select>

    <insert id="insertMember" parameterType="com.book.cord.login.MemberVO">
<!--    INSERT INTO members (member_num, id, pwd, name, reg_date, email, role, provider, provider_id, profile_img) -->
	    INSERT INTO members (member_num, id, pwd, name, reg_date)
	    VALUES (seq_member_num.nextval, #{id}, #{pwd}, #{name}, SYSDATE)
<!-- 	    VALUES (seq_member_num.nextval, #{id}, #{pwd}, #{name}, SYSDATE, #{email}, #{role}, #{provider}, #{provider_id}, #{profile_img}) -->
	</insert>


</mapper>
